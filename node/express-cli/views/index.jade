extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    form(action='/hello',method='post')
      div(data-role='fieldcontain')
        fieldset(data-type='vertical', data-role='controlgroup')                                           
        label(for='name') name
        input(id='name',type='text')
      div(data-role='fieldcontain')   
        input(type='submit',value='Enviar',data-transition='fade', data-theme='c') 
